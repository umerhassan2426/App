<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adv">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="7.5">
        <!-- Advance  -->
        <TextView
            android:layout_weight="0.5"
            android:gravity="center"
            android:background="@color/yello"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data Storage"></TextView>
        <TextView
            android:layout_weight="1"
            android:textSize="20sp"
            android:id="@+id/adv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shared Preferences"></TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_overlay"
            android:layout_margin="10dp"/>
        <TextView
            android:textSize="20sp"
            android:id="@+id/adv2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Internal Storage"></TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_overlay"
            android:layout_margin="10dp"/>
        <TextView
            android:textSize="20sp"
            android:id="@+id/adv3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="External Storage"></TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_overlay"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_weight="1"
            android:textSize="20sp"
            android:id="@+id/adv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SQLite Database"></TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_overlay"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_weight="0.5"
            android:gravity="center"
            android:background="@color/yello"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notifications"></TextView>
        <TextView
            android:layout_weight="1"
            android:textSize="20sp"
            android:id="@+id/adv5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Push Notification"></TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_overlay"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_weight="0.5"
            android:gravity="center"
            android:background="@color/yello"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Web View"
            ></TextView>
        <TextView
            android:layout_weight="1"
            android:textSize="20sp"
            android:id="@+id/adv6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Web View Layout"></TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_overlay"
            android:layout_margin="10dp"/>


    </LinearLayout>
    </ScrollView>
</RelativeLayout>