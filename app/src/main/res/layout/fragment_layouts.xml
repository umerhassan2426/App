<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Layouts">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!-- layout -->
    <TextView
        android:textSize="21sp"
        android:id="@+id/lay1"
        android:textColor="@color/Heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is Layout in Android App Development?"></TextView>
    <TextView
        android:layout_below="@id/lay1"
        android:textSize="16sp"
        android:id="@+id/lay2"
        android:textColor="@color/Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Layout"></TextView>
    <TextView
        android:layout_below="@id/lay2"
        android:textSize="21sp"
        android:id="@+id/lay3"
        android:textColor="@color/Heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Android Studio Layout Types"></TextView>
    <TextView
        android:layout_below="@id/lay3"
        android:textSize="21sp"
        android:id="@+id/lay4"
        android:textColor="@color/Heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Linear Layout\nRelative Layout\nTable Layout\nFrame Layout\nGrid Layout\nConstraint Layout"></TextView>
        <TextView
            android:layout_below="@id/lay4"
            android:textSize="21sp"
            android:id="@+id/lay5"
            android:textColor="@color/Heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Linear Layout"></TextView>
        <TextView
            android:layout_below="@id/lay5"
            android:textSize="16sp"
            android:id="@+id/lay6"
            android:textColor="@color/Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Android Linear Layout is a View Group that aligns all its children in either vertically or horizontally."></TextView>

        <ImageView
            android:layout_below="@id/lay6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/layout1"
            android:id="@+id/lay7"
            android:scaleType="fitStart" />
        <TextView
            android:layout_below="@id/lay7"
            android:textSize="16sp"
            android:id="@+id/lay8"
            android:textColor="@color/Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/layout1"></TextView>
        <TextView
            android:layout_below="@id/lay8"
            android:textSize="21sp"
            android:id="@+id/lay9"
            android:textColor="@color/Heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Relative Layout"></TextView>
        <TextView
            android:layout_below="@id/lay9"
            android:textSize="16sp"
            android:id="@+id/lay10"
            android:textColor="@color/Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/layout2"></TextView>
        <ImageView
            android:layout_below="@id/lay10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/layout2"
            android:id="@+id/lay11"
            android:scaleType="fitStart" />
        <ImageView
            android:layout_below="@id/lay11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/layout3"
            android:id="@+id/lay12"
            android:scaleType="fitStart" />
        <TextView
            android:layout_below="@id/lay12"
            android:textSize="21sp"
            android:id="@+id/lay13"
            android:textColor="@color/Heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Table Layout"></TextView>
        <TextView
            android:layout_below="@id/lay13"
            android:textSize="16sp"
            android:id="@+id/lay14"
            android:textColor="@color/Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/layout3"></TextView>
        <ImageView
            android:layout_below="@id/lay14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/layout4"
            android:id="@+id/lay15"
            android:scaleType="fitStart" />
        <TextView
            android:layout_below="@id/lay15"
            android:textSize="21sp"
            android:id="@+id/lay16"
            android:textColor="@color/Heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frame Layout"></TextView>
        <TextView
            android:layout_below="@id/lay16"
            android:textSize="16sp"
            android:id="@+id/lay17"
            android:textColor="@color/Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/layout4"></TextView>
        <TextView
        android:layout_below="@id/lay17"
        android:textSize="21sp"
        android:id="@+id/lay18"
        android:textColor="@color/Heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gird Layout"></TextView>
        <TextView
            android:layout_below="@id/lay18"
            android:textSize="16sp"
            android:id="@+id/lay19"
            android:textColor="@color/Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lyout5"></TextView>
        <TextView
            android:layout_below="@id/lay19"
            android:textSize="21sp"
            android:id="@+id/lay20"
            android:textColor="@color/Heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Constraint Layout"></TextView>
        <TextView
            android:layout_below="@id/lay20"
            android:textSize="16sp"
            android:id="@+id/lay21"
            android:textColor="@color/Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/layout6"></TextView>




    </RelativeLayout>


</ScrollView>