<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sqlite">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView

        android:textSize="21sp"
        android:id="@+id/sql1"
        android:textColor="@color/Heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is SQLite?"></TextView>
    <TextView
        android:layout_below="@id/sql1"
        android:textSize="16sp"
        android:id="@+id/sql2"
        android:textColor="@color/Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sql"></TextView>
    <TextView
        android:layout_below="@+id/sql2"
        android:textSize="21sp"
        android:id="@+id/sql3"
        android:textColor="@color/Heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How to create SQLite database?"></TextView>
    <TextView
        android:layout_below="@id/sql3"
        android:textSize="16sp"
        android:id="@+id/sql4"
        android:textColor="@color/Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sql1"></TextView>
    <TextView
        android:layout_below="@+id/sql4"
        android:textSize="21sp"
        android:id="@+id/sql5"
        android:textColor="@color/Heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Design of SQLite database"></TextView>
    <TextView
        android:layout_below="@id/sql5"
        android:textSize="16sp"
        android:id="@+id/sql6"
        android:textColor="@color/Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sql2"></TextView>
    <ImageView
        android:layout_below="@id/sql6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/sql"
        android:id="@+id/sql7"
        android:scaleType="fitStart" />
    <ImageView
        android:layout_below="@id/sql7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/sql2"
        android:id="@+id/sql8"
        android:scaleType="fitStart" />
    <ImageView
        android:layout_below="@id/sql8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/sql3"
        android:id="@+id/sql9"
        android:scaleType="fitStart" />
    <TextView
        android:layout_below="@+id/sql9"
        android:textSize="21sp"
        android:id="@+id/sql10"
        android:textColor="@color/Heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Define Schema "></TextView>
    <TextView
        android:layout_below="@id/sql10"
        android:textSize="16sp"
        android:id="@+id/sql11"
        android:textColor="@color/Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sql3"></TextView>

</RelativeLayout>
</ScrollView>