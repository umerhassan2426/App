<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UIControls">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- UI Controls -->
    <TextView
        android:textSize="21sp"
        android:id="@+id/ui1"
        android:textColor="@color/Heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Android UI Controls"></TextView>
    <TextView
        android:layout_below="@id/ui1"
        android:textSize="16sp"
        android:id="@+id/ui2"
        android:textColor="@color/Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Ui"></TextView>

    <ImageView
        android:layout_below="@id/ui2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ui"
        android:id="@+id/ui3"
        android:scaleType="fitStart" />
    <TextView
        android:layout_below="@id/ui3"
        android:textSize="21sp"
        android:id="@+id/ui4"
        android:textColor="@color/Heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UI Control &amp; Description"></TextView>

    <TextView
        android:gravity="start"
        android:background="@color/green"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"></TextView>
    <TextView
        android:textSize="20sp"
        android:id="@+id/ui5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This control is used to display text to the user."></TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"
        android:layout_margin="10dp"/>
    <TextView
        android:gravity="start"
        android:background="@color/green"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EditText"></TextView>
    <TextView
        android:textSize="20sp"
        android:id="@+id/ui6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EditText is a predefined subclass of TextView that includes rich editing capabilities."></TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"
        android:layout_margin="10dp"/>
    <TextView
        android:gravity="start"
        android:background="@color/green"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AutoCompleteTextView"></TextView>
    <TextView
        android:textSize="20sp"
        android:id="@+id/ui7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The AutoCompleteTextView is a view that is similar to EditText, except that it shows a list of completion suggestions automatically while the user is typing."></TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"
        android:layout_margin="10dp"/>
    <TextView
        android:gravity="start"
        android:background="@color/green"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button"></TextView>
    <TextView
        android:textSize="20sp"
        android:id="@+id/ui8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A push-button that can be pressed, or clicked, by the user to perform an action."></TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"
        android:layout_margin="10dp"/>
    <TextView
        android:gravity="start"
        android:background="@color/green"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CheckBox"></TextView>
    <TextView
        android:textSize="20sp"
        android:id="@+id/ui9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ui2"></TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"
        android:layout_margin="10dp"/>
    <TextView
        android:gravity="start"
        android:background="@color/green"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ToggleButton"></TextView>
    <TextView
        android:textSize="20sp"
        android:id="@+id/ui10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="An on/off button with a light indicator."></TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"
        android:layout_margin="10dp"/>
    <TextView
        android:gravity="start"
        android:background="@color/green"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RadioButton"></TextView>
    <TextView
        android:textSize="20sp"
        android:id="@+id/ui11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The RadioButton has two states: either checked or unchecked.."></TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"
        android:layout_margin="10dp"/>
    <TextView
        android:gravity="start"
        android:background="@color/green"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RadioGroup"></TextView>
    <TextView
        android:textSize="20sp"
        android:id="@+id/ui12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A RadioGroup is used to group together one or more RadioButtons."></TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"
        android:layout_margin="10dp"/>
    <TextView
        android:gravity="start"
        android:background="@color/green"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ProgressBar"></TextView>
    <TextView
        android:textSize="20sp"
        android:id="@+id/ui13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The ProgressBar view provides visual feedback about some ongoing tasks, such as when you are performing a task in the background."></TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"
        android:layout_margin="10dp"/>
    <TextView
        android:gravity="start"
        android:background="@color/green"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spinner"></TextView>
    <TextView
        android:textSize="20sp"
        android:id="@+id/ui14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A drop-down list that allows users to select one value from a set."></TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"
        android:layout_margin="10dp"/>
    <TextView
        android:gravity="start"
        android:background="@color/green"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TimePicker"></TextView>
    <TextView
        android:textSize="20sp"
        android:id="@+id/ui15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The TimePicker view enables users to select a time of the day, in either 24-hour mode or AM/PM mode."></TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"
        android:layout_margin="10dp"/>
    <TextView
        android:gravity="start"
        android:background="@color/green"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DatePicker"></TextView>
    <TextView
        android:textSize="20sp"
        android:id="@+id/ui16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The DatePicker view enables users to select a date of the day."></TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"
        android:layout_margin="10dp"/>

</LinearLayout>
</ScrollView>